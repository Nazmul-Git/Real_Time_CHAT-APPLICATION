<%- include('./common/common.ejs') %>
<div id="login-container">
  <div id="left-column"></div>
  <div id="branding">
    <img src="./images/logo.png" alt="Chat Application Logo" />
    <h1>Login - Chat Application</h1>
  </div>
  <div id="login-form">
    <form method="post" action="/">
      <input type="text" name="username" placeholder="Enter mobile or email" value="<%= data.username %>"
        aria-label="Mobile or Email" required />
      <% if(errors && errors.username) { %>
        <p class="error show">
          <%= errors.username.message %>
        </p>
      <% } %>

      <input type="password" name="password" placeholder="Enter password" aria-label="Password" required />
      <% if(errors && errors.password) { %>
        <p class="error show">
          <%= errors.password.message %>
        </p>
      <% } %>

      <% if(errors && errors.common) { %>
        <p class="error show">
          <%= errors.common.message %>
        </p>
      <% } %>

      <input type="submit" value="Login" />
    </form>
  </div>
</div>
</body>
</html>
